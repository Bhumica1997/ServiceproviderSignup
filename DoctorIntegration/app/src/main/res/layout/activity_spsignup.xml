<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.doctorintegration.SpsignupActivity"
    android:orientation="vertical"
    android:background="@color/azur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:text="Sign Up"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/spname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextstyle"
            android:hint="username"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/spaddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextstyle"
            android:hint="address"
           />

        <EditText
            android:id="@+id/editTextEmail1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextstyle"
            android:hint="email_id"
            android:maxLines="1"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText

            android:id="@+id/editTextPassword1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextstyle"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLines="1"    />

        </android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/spphno"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextstyle"
            android:hint="phone no"
            android:maxLines="1"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Select Category"
            android:textSize="10dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:entries="@array/category" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:text="Upload your certifications" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:text="upload"
            android:textSize="18sp" />


        <Button
            android:id="@+id/buttonsp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonstyle"
            android:text="Sign Up" />

    </LinearLayout>
</LinearLayout>