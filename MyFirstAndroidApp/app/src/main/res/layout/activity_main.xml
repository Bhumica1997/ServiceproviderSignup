<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.user.myfirstandroidapp.MainActivity">

    <TextView
        android:id="@+id/textviewsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:gravity="center"
        android:text="SERVICE PROVIDER SIGN UP"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/spusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:inputType="textPersonName"
        android:hint="Username" />

    <EditText
        android:id="@+id/spaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:inputType="textPersonName"
        android:hint="address" />

    <EditText
        android:id="@+id/spemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="email id"/>

    <EditText
        android:id="@+id/sppassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="password"
        android:paddingTop="20dp"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/spphno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:paddingTop="20dp"
        android:inputType="phone"
        android:maxLines="1"
        android:hint="phone number"/>

    <Button
        android:id="@+id/spbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:text="SIGN UP" />


</LinearLayout>



